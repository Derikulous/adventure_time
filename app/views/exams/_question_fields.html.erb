<fieldset>
  <%= f.text_area :content, class:"form-control", placeholder:"Insert question" %>
  <%= f.hidden_field :_destroy %>
  <%= link_to "Remove Question", '#', class: "remove_fields btn btn-warning btn-xs" %>
  <%= f.fields_for :answers do |builder| %>
          <%= render 'answer_fields', f: builder %>
  <% end %>

  <%= link_to_add_fields "Add Answer", f, :answers %>

</fieldset>
